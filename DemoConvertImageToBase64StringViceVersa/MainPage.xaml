<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoConvertImageToBase64StringViceVersa.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Convert" x:Name="BtnSelectImage" Clicked="BtnSelectImage_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Spacing="10" Margin="10">

        <HorizontalStackLayout Spacing="10">
            <Label Text="To Base64String: "></Label>
            <Image x:Name="ImageLabel" WidthRequest="400" HeightRequest="200"></Image>
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="10">
            <Label Text="Base64String: "></Label>
            <Label Grid.Column="1"  x:Name="Base64String" WidthRequest="300" HeightRequest="300"></Label>
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="20">
            <Label Text="From Base64String: "></Label>
            <Image Margin="20" x:Name="ImageFromBase" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="200" HeightRequest="200"></Image>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
